// Font families

$font-family-gotham-round = 'Gotham Rounded A', 'Gotham Rounded B', Helvetica, Arial, sans-serif
$font-family-sentinel = 'Sentinel SSm A', 'Sentinel SSm B', Georgia, Times, serif

// Font sizes

$font-size-large = 1.125em
$font-size-copy = 1.1em
$font-size-base = 1em
$font-size-small = .95em
$font-size-smaller = .85em

$font-size-h1 = 1.6em
$font-size-h2 = 1.4em
$font-size-h3 = 1.2em
$font-size-h4 = 1.1em
$font-size-h5 = 1em
$font-size-h6 = .875em

$line-height-base = 1.65
$line-height-headings = 1.4

$font-weight-normal = 400
$font-weight-semibold = 500
$font-weight-bold = 800

// Blues

$blue-saturated-darker = #001620
$blue-saturated-dark = #002531
$blue-saturated = #003546
$blue-saturated-light = #1f4753
$blue-saturated-lighter = #438193

$blue = #12acef
$blue-light = lighten($blue, 50%)
$blue-lighter = lighten($blue, 90%)

// Monochromatic

$gray-darker = #272b2d
$gray-dark = #4d5659
$gray = #828c8f
$gray-light = #b7c0c3
$gray-lighter = #e6eaed

$border-color = #f7f7f7

// Pinks

$pink = #ec008c
$pink-light = #fec1d1
$pink-lighter = #ffedf2

// Greens

$green = #43bb6e
$green-light = lighten($green, 70%)
$green-lighter = #e8f7ef

// Reds

$red = #e80044
$red-light = lighten($red, 80%)
$red-lighter = lighten($red, 97%)

// Orange

$orange = #f18902
$orange-light = lighten($orange, 50%)
$orange-lighter = lighten($orange, 85%)

// dimensions

$base = 10px
$seven = 7  * $base
$five = 5  * $base
$three = 3  * $base
$page = 38 * $base

// logos

$logo-ampersand = url(unquote("data:image/svg+xml;base64,"))

$logo-ampersand-gray = url(unquote("data:image/svg+xml;base64,"))