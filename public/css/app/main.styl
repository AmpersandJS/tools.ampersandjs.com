// app/layout.styl

@import '../_variables'
@import '../_mixins'

*
  borderbox()

html
  font-size: 100%

body
  font: $font-size-base/$line-height-base $font-family-sentinel
  font-weight: 400
  color: $gray-dark
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  border: 20px solid $border-color

@media (max-width: 860px)
  body
    border-width: 10px

::-moz-selection
  background-color: $blue-light
  color: white

::selection
  background-color: $blue-light
  color: white

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

h1, h2, h3, h4
  line-height: 1.3

h1, h2, h3, h4, h5, h6
  font-family: $font-family-gotham-round
  font-weight: $font-weight-semibold

h1
  font-size: $font-size-h1
  color: $gray-darker
  $line-height-headings

h2
  font-size: $font-size-h2

h3
  font-size: $font-size-h3

h4 
  font-size: $font-size-h4

a
  color: $blue
  text-decoration: none
  cursor: pointer

  &:hover 
    color: darken($blue, 20%)
    text-decoration: none

.container
  padding: 30px

@media (max-width: 1199px)
  .container
    max-width: 100%

@media (max-width: 450px)
  .container
    padding: 30px 20px


.navbar
  font-family: $font-family-gotham-round
  position: relative
  background: white
  box-shadow: none
  border: none

  .navbar-header
    float: none

  .navbar-brand
    padding-left: 40px
    padding-top: 0
    position: relative
    float: left
    color: $gray-darker
    $font-size: $font-size-h1
    $font-weight: $font-weight-bold
    text-shadow: none
    span
      margin-top: 3px
      display: block
      font-weight: $font-weight-normal
      font-size: $font-size-smaller
    &:before
      content: ''
      width: 35px
      height: 35px
      display: block
      position: absolute
      top: 0
      left: 0
      background: no-repeat 0 0
      background-image: url(public/images/logo-ampersand.png)
      background-image: $logo-ampersand, none
      background-size: auto 34px

  .button
    float: right

@media (max-width: 768px)
  .navbar
    .button
      position: absolute
      top: -57px
      right: -15px

@media (max-width: 450px)
  .navbar
    .button
      right: -5px

.form-control
  height: 45px
  margin-top: 15px
  font-size: $font-size-base

.repoList
  padding: 30px 15px

.repo
  display: none
  float: left
  width: 32%
  height: 275px
  margin-right: 2%
  position: relative
  overflow: hidden
  border: 1px dotted $gray-lighter
  background: white
  box-shadow: none
  &:nth-child(3n)
    margin-right: 0

  h3
    margin-top: 0
    color: $gray-darker

    small
      padding-top: 5px
      display: block
      font-family: $font-family-sentinel
      font-style: italic

  .tags
    font-size: $font-size-smaller

  .description
    font-size: $font-size-smaller
    margin: 20px 0

.repo.active
  display: inline-block

@media (max-width: 925px)
  .repo
    width: 49%
    &:nth-child(3n)
      margin-right: 2%
    &:nth-child(2n)
      margin-right: 0

@media (max-width: 680px)
  .repo
    width: 100%
    margin-right: 0
    &:nth-child(3n)
      margin-right: 0

// Footer

.footer-main
  padding: 40px 20px
  border-top: 1px solid $border-color
  font-family: $font-family-gotham-round
  font-size: $font-size-smaller
  text-align: center
  color: $gray

  .nav-item
    margin: 0 10px 10px
    display: inline-block

  .logo-ampersand-gray
    width: 17px
    height: 20px
    margin-top: 10px
    display: inline-block
    text-indent: -9999em
    background: no-repeat 0 0
    background-size: 17px auto
    background-image: url(public/images/logo-ampersand-gray.png)
    background-image: $logo-ampersand-gray, none

// buttons

button
  border: none

.button, a.button
  display: inline-block
  border-radius: 3px
  margin-top: 15px
  padding: 6px 15px
  font-family: $font-family-gotham-round
  font-size: $font-size-base
  font-weight: $font-weight-bold
  text-align: center
  line-height: 1.5
  user-select()
  cursor: pointer
  background-color: lighten($blue-saturated-lighter, 85%)
  color: $blue-saturated

  &:hover
    background-color: lighten($blue-saturated-lighter, 65%)

  &:disabled, &.button-disabled
    cursor: not-allowed
    color: lighten($blue-saturated-lighter, 40%)
    background-color: lighten($blue-saturated-lighter, 85%)

  &:focus
    outline: none
    
  &.button-small
    padding: 3px 8px
    font-size: $font-size-small

  &.button-large
    padding: 10px 20px
    font-size: $font-size-large

  &.button-primary, &.button-secondary, 
  &.button-primary:hover, &.button-secondary:hover
    color: white

  &.button-primary
    background-color: $pink

    &:hover
      background-color: darken($pink, 10%)

    &:disabled, .button-disabled
      background-color: $pink-light

  &.button-secondary
    background-color: $blue

    &:hover
      background-color: darken($blue, 10%)

    &:disabled, .button-disabled
      background-color: $blue-light
